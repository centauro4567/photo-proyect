<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
    <%- include('partials/styles.ejs') %>
</html>
<body>

    <h1 class="text-center my-5"><i class="fas fa-user-plus"></i> Sign Up</h1>


    <div class="gradient container w-50 my-5">

        <form class="p-5" action="/api/users/signup" method="POST">

            <div class="mb-3 text-center">

                <label class="form-label" for="username">Username</label>
                <input class="form-control" name="username" type="text">

            </div>
            
            <div class="mb-5 text-center">

                <label class="form-label" for="password">Password</label>
                <input class="form-control" name="password" type="password">    

            </div>

            <div class="my-2 d-flex text-center">

                <input  class="btn btn-primary py-3 w-75 colorBlue" type="submit" value="Create" name="submitUp" id="submitUp">
                <a class="btn btn-secondary py-3 w-25 fst-italic text-decoration-none" href="/api/users">Cancel</a>

            </div>
            

        </form>

    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <% if(alert){ %>

            <script>
                Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '<%= alertText %>',
                }).then(()=>{
                    window.location = '/api/users/signup'
                })
            </script>

        <%}%>

</body>

</html>