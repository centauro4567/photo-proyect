<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<%- include('partials/styles.ejs') %>
<body style="margin-bottom: 100px;">
    <%- include('partials/nav') %>


    <div class="mb-5">

                <h3 class="colorRedGradient text-center my-4 py-2"><%= photoFound.name %></h3>
                <img style="max-height: 550px; object-fit:scale-down;" class="w-100" src="<%= photoFound.imgPath%>" alt="">
                <p style="font-weight: bold;border: none;" 
                class=" colorBlueGradient text-center mx-auto my-3 p-3"><%= photoFound.description %></p>

            <div class="my-2 mx-auto d-flex text-center justify-content-center w-50 buttons">
                
                <a style="margin-right: 10px;" class="colorBlue btn py-3 topButton" href="/api/photos/edit/<%= photoFound.user._id %>/<%= photoFound._id%>"><i class="fas fa-edit"></i> Edit</a>
                
                <a class="colorRed btn py-3 fst-italic lowButton" onclick="confirmate()"><i class="fas fa-trash-alt"></i> Delete</a>

            </div>
    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>

            function confirmate(){

                    Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                    'Deleted!',
                    'Your file has been deleted.',
                    'success'
                    )

                    window.location = '/api/photos/delete/<%= userId %>/<%= photoFound._id %>'
                    }
                })

            }
            
        </script>


</body>

<%- include('partials/footer') %>
</html>