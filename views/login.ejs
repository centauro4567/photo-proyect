<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
    <%- include('partials/styles.ejs') %>
<body class="gradient">
    <h1 style="font-size: 130px" class="text-center my-5"><i class="fas fa-photo-video"></i></h1>

    <div class="containerMod my-5">
        
        <form class="p-5" action="/api/users/signin" method="POST">

            <div class="mb-3 text-center">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" name="username" type="text">
            </div>
            
            <div class="mb-5 text-center">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" name="password" type="password">
            </div>
            
        <div class="my-2 d-flex text-center buttons">
            
            <input class="topButton btn py-3 colorBlue" type="submit" value="Login" name="submitIn" id="submitIn">
            <a class="lowButton btn py-3 fst-italic colorRed text-decoration-none" href="/api/users/signup">Sign up</a>
        
        </div>
            
        </form>

    </div>    

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if(alert){ %>

        <script>
            Swal.fire({
            icon: 'error',
            title: 'Error',
            text: '<%= alertText %>',
            }).then(()=>{
                window.location = '/api/users/'
            })
        </script>

    <%}%>

</body>

</html>