<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body style="margin-bottom: 100px;">
    <%- include('partials/nav') %>

    <div class="container">
        
        <h1 style="background: rgb(255,40,75);
        background: radial-gradient(circle, rgba(255,40,75,1) 0%, rgba(255,255,255,1) 100%);" class="text-center my-4 py-2"><%= username %></h1>

        <div style="flex-wrap: wrap;" class="container d-flex p-4 justify-content-around">

            <% for(var i = 0; i < photos.length; i++){ %>

                <div style="width: 23%;
                    background: rgb(90,90,255);
                    background: radial-gradient(circle, rgba(90,90,255,1) 50%, rgba(255,255,255,1) 100%);
                    border: none;
                " class="card p-2 pb-4 m-2">

                    <h5 style="height: 25px; overflow: hidden;" class="text-center"><%= photos[i].name %></h5>

                    <a href="/api/photos/dashboard/<%=photos[i].user._id%>/<%=photos[i]._id%>">
                        <img style="max-height: 123.75px; object-fit: cover;" class="w-100" src="<%= photos[i].imgPath%>" alt="">
                    </a>

                </div>

            <% } %>

            <div style="width: 23%;  border: none;" class="card p-2 m-2 text-center">
                
                <a style="font-size: 100px;" class="my-auto" href="/api/photos/create/<%= userId %>"><i class="far fa-plus-square"></i></a>

            </div>

        </div>


            

    </div>



</body>

<%- include('partials/footer') %>
</html>